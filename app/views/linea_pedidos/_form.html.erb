<div id="<%= dom_id(linea_pedido) %>" class="table-container">
  <%= form_with(model: linea_pedido) do |form| %>
    <% if linea_pedido.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(linea_pedido.errors.count, "error") %> prohibited this pedido from being saved:</h2>

        <ul>
          <% linea_pedido.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <table>
      <tr>
        <th><%= form.label :cliente_id, style: "display: block" %></th>
        <td><%= form.collection_select :cliente_id, Cliente.all, :id, :nombre, { prompt: "Selecciona un cliente" } %></td>
      </tr>
      <tr>
        <th><%= form.label :total, style: "display: block" %></th>
        <td><%= form.text_field :total %></td>
      </tr>
      <tr>
        <th><%= form.label :estado, style: "display: block" %></th>
        <td><%= form.text_field :estado %></td>
      </tr>
      <tr>
        <th><%= form.label :fecha, style: "display: block" %></th>
        <td><%= form.date_field :fecha %></td>
      </tr>
      <tr>
        <th><%= form.label :linea_pedido_id, style: "display: block" %></th>
        <td><%= form.collection_select :linea_pedido_id, LineaPedido.all, :id, :id %></td>
      </tr>
    </table>

    <div class="submit-container">
      <%= form.submit %>
    </div>
  <% end %>
</div>